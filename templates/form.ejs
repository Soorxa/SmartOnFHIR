<!DOCTYPE html>
<html>
<head>
    <link href="https://lhcforms-static.nlm.nih.gov/lforms-versions/34.0.0/webcomponent/styles.css" media="screen" rel="stylesheet" />
</head>
<body>
    <div id="formContainer"></div>

    <script src="https://lhcforms-static.nlm.nih.gov/lforms-versions/34.0.0/webcomponent/assets/lib/zone.min.js"></script>
    <script src="https://lhcforms-static.nlm.nih.gov/lforms-versions/34.0.0/webcomponent/lhc-forms.js"></script>
    <script src="https://lhcforms-static.nlm.nih.gov/lforms-versions/34.0.0/fhir/R4/lformsFHIR.min.js"></script>
    <button onclick="showQR()">Show FHIR QuestionnaireResponse</button>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/fhirclient/2.4.0/fhir-client.min.js"></script>
    <script>
        let form;

        // Get the questionnaireId from the URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const questionnaireId = urlParams.get('questionnaireId');

        // Initialize the SMART on FHIR client
        FHIR.oauth2.ready().then(function(client) {
            // Fetch the specific form based on questionnaireId
            client.request(`Questionnaire/${questionnaireId}`).then(function(data) {
                form = data;
                LForms.Util.addFormToPage(form, 'formContainer');
            }).catch(function(error) {
                console.error("Error fetching form:", error);
            });
        }).catch(function(error) {
            console.error("Error initializing SMART on FHIR client:", error);
        });

        function showQR() {
            let qr = LForms.Util.getFormFHIRData('QuestionnaireResponse', 'R4');
            let lformsQ = LForms.Util.convertFHIRQuestionnaireToLForms(form, 'R4');
            let formWithUserData = LForms.Util.mergeFHIRDataIntoLForms("QuestionnaireResponse", qr, lformsQ, "R4");

            LForms.Util.addFormToPage(formWithUserData, 'formContainer');

            // Submitting the data to the server
            fetch('/submit-questionnaire', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(qr)
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                window.location.href = '/index'; // Redirects to the index page after successful submission
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>
</body>
</html>