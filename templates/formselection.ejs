<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questionnaire App</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1>Questionnaire App</h1>
    </header>
    <main>
        <section id="upload">
            <h2>Upload a Questionnaire</h2>
            <input type="file" id="fileInput">
            <button id="uploadBtn">Upload</button>
        </section>
        <section id="questionnaires">
            <h2>Available Questionnaires</h2>
            <div id="questionnaireList"></div>
        </section>
        <section id="patientPicker">
            <h2>Patient Picker</h2>
            <select id="patientSelect">
                <option>Select a patient</option>
            </select>
            <button id="selectPatientBtn">Select</button>
        </section>
    </main>
    <script src="scripts.js"></script>
</body>
</html>